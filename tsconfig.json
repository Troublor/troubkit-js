{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "removeComments": false,
    "outDir": "lib"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
